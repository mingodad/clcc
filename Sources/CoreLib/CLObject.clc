CLObject
{

	unsigned long retainCount;


	// constructor	

	void init ( )
	{

		retainCount = 1;
		
	}


	// destructor

	void destruct( )
	{
		

		
	}
	
	
	// retains object
	
	void retain ( )
	{

		++retainCount;

	}
	
	
	// releases object

	void release ( )
	{
		
		if ( --retainCount == 0 )
		{

			self.destruct( );
			free_object( self );

		}

	}
	
	
	// describes object
	
	void describe ( )
	{
	
		printf( "\nObject %li retainCount %li" , ( long ) self , retainCount );
		
	}

}